# Zoomprop ETL Template - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# DEFAULT DATABASE CONNECTION
# =============================================================================
# Supported types: postgresql, mysql, sqlite, mssql
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_username
DB_PASSWORD=your_password

# Database connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# Database operation settings
DB_CHUNK_SIZE=1000

# =============================================================================
# SECONDARY DATABASE CONNECTION (Optional)
# Prefix with connection name, e.g., STAGING_, PROD_, etc.
# =============================================================================
# STAGING_DB_TYPE=postgresql
# STAGING_DB_HOST=staging-db.example.com
# STAGING_DB_PORT=5432
# STAGING_DB_NAME=staging_database
# STAGING_DB_USER=staging_user
# STAGING_DB_PASSWORD=staging_password
# STAGING_DB_POOL_SIZE=3

# =============================================================================
# THIRD DATABASE CONNECTION (Optional)
# =============================================================================
# PROD_DB_TYPE=postgresql
# PROD_DB_HOST=prod-db.example.com
# PROD_DB_PORT=5432
# PROD_DB_NAME=production_database
# PROD_DB_USER=prod_user
# PROD_DB_PASSWORD=prod_password
# PROD_DB_POOL_SIZE=10

# =============================================================================
# ETL SPECIFIC CONFIGURATIONS
# =============================================================================
# Default input/output directories
INPUT_DATA_DIR=./data/input
OUTPUT_DATA_DIR=./data/output
TEMP_DATA_DIR=./data/temp

# CSV processing settings
DEFAULT_CSV_ENCODING=utf-8
DEFAULT_CSV_DELIMITER=,

# Data cleaning settings
ENABLE_AUTO_TYPE_CONVERSION=true
ENABLE_OUTLIER_DETECTION=false
OUTLIER_DETECTION_METHOD=iqr
OUTLIER_FACTOR=1.5

# =============================================================================
# ENVIRONMENT SPECIFIC SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=false

